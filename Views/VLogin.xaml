<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DarwinPullaguariExamen.Views.VLogin"
             Title="VLogin">
    <VerticalStackLayout
        Spacing="20"
        Padding="25">
        <Label 
            Text="Login"
            TextColor="Red"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Image Source="logo.png"
               WidthRequest="150"/>

        <Label Text="Inicio de Sesión"
               FontSize="25"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Entry x:Name="UserEntry" 
               Placeholder="Usuario" 
               FontSize="18"/>

        <Entry x:Name="PassEntry" 
               Placeholder="Contraseña" 
               IsPassword="True" 
               FontSize="18"/>

        <Button Text="Ingresar" 
                BackgroundColor="DeepSkyBlue" 
                TextColor="White"
                Clicked="OnLoginClicked"/>

        <Label x:Name="LoginStatusLabel" 
               Text="" 
               TextColor="Red"
               HorizontalOptions="Center" 
               VerticalOptions="Center"/>


    </VerticalStackLayout>
</ContentPage>